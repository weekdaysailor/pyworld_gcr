externalPort = 80

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "World3 Visualization"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "World3 Population Test"

[[workflows.workflow]]
name = "World3 Visualization"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

